<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".about_uvce"
    tools:showIn="@layout/activity_about_uvce">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10sp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:elevation="50sp"
            android:id="@+id/about_uvce_card1"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10sp"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:id="@+id/card1_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/about_uvce_card1"
                android:textSize="20sp"
                android:background="@drawable/blue_border"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:elevation="50sp"
            android:id="@+id/about_uvce_card2"
            app:cardCornerRadius="10sp"
            android:layout_below="@+id/about_uvce_card1"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:id="@+id/card2_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/blue_border"
                android:text="@string/about_uvce_card2"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:elevation="50sp"
            android:id="@+id/about_uvce_card3"
            app:cardCornerRadius="10sp"
            android:layout_below="@+id/about_uvce_card2"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="true">

            <TextView
                android:id="@+id/card3_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/blue_border"
                android:text="@string/about_uvce_card3"
                android:textSize="20sp" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>